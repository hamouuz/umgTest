{% extends 'base.html.twig' %}

{% block title %}Page admin{% endblock %}

{% block body %}

<div class="container">
    <h1>Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Role</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                
                <td>
                    <a href="{{ path('app_admin_show', {'id': user.id}) }}" class="btn btn-primary">Afficher</a>
                    
                    <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="btn btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Non trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_new') }}" class="btn btn-success">Ajouter</a>
</div>
{% endblock %}
